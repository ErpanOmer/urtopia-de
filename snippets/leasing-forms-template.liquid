                scrollTop: $('.forms').offset().top - (values.offers === 'yes' ? ((document.documentElement.clientHeight / 2) + ($('.forms').height() / 2)) / 2 : 40)
            }, 300)

            // offers 不等于yes ,才去监听buy now
            values.offers !== 'yes' && $('.bynow').on('click', e => buynow(e, values))

            {% comment %} page_infos.page_name === 'jobrad' && $('.forms .centeral-content .forms-link').on('click', e => {
