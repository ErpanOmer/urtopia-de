                    title.click()
                }
                
                setTimeout(() => {
                    $('html').animate({
                        scrollTop: $(item).offset().top - 85
                    }, 300)
                })
        
        
                e.preventDefault();
                return false;
            }) {% endcomment %}
        }, 50)

        event.preventDefault();
        return false;
    })


    
    // SELECT 插件
    const selectPlugin = $('select[name="accessories"]').SumoSelect({
        placeholder: '',
        csvDispCount: 0,
        floatWidth: 768,
    })


    // url 参数
    const urlSearch = getSearchValues()

