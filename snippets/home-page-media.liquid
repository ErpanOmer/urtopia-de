<style>
    @keyframes toTop {
        0% {
          opacity: 0;
          transform: translateY(0px);
        }
    
        /* 50% {
          opacity: 0.5;
          transform: translateY(-20px);
        } */
    
        100% {
          transform: translateY(-40px);
          opacity: 1;
        }
    }
    
    @keyframes toBottom {
        0% {
          opacity: 1;
          transform: translateY(0px);
        }
    
        /* 50% {
          opacity: 0.5;
          transform: translateY(20px);
        } */
    
        100% {
          transform: translateY(40px);
          opacity: 0;
        }
    }
    
    #section1 .texts div {
      animation-duration: 0.5s;
      animation-timing-function: ease-out;
    }
    
    #section1 .texts .toTop {
      opacity: 1;
      animation-name: toTop;
      transform: translateY(-40px);
    }
    
    #section1 .texts .toBottom {
      opacity: 0;
      animation-name: toBottom;
      transform: translateY(40px);
    }
    
    
    #section1 {
      display: flex;
      height: 340px;
      width: 100%;
      flex-direction: column;
      align-items: center;
      padding: 75px 0;
      box-sizing: border-box;
      background-color: #f7f8fa;
    }
    
    #section1 .texts {
      flex: 1;
      font: normal normal bold 30px/40px Urbane;
      display: flex;
        align-items: center;
        flex-direction: column;
    }
    
    #section1 .logos img {
      height: 60px;
      width: auto;
      margin: 0 39px;
      opacity: 0.5;
    }
    
    #section1 .logos img[active] {
      opacity: 1;
    }


    #section1-mobile {
        overflow: hidden;
        --swiper-theme-color: #000;
        --swiper-pagination-color: #000;/* 两种都可以 */
    }
    
    #section1-mobile .swiper-slide {
        box-sizing: border-box;
        padding: 0 10%;
          display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    
    #section1-mobile .swiper-slide img {
        height: 60px;
      width: auto;
    }
    
    
    #section1-mobile .swiper-slide .u20Medium {
        font-weight: 600;
        margin: 20px 0 40px;
        font-size: 22px;
        line-height: 26px;
    }
    
    #section1-mobile .swiper-pagination {
        position: static;
    }
    
    #section1-mobile .swiper-pagination-bullet {
        height: 6px;
        width: 6px;
    }
    
    #section1-mobile .swiper-pagination-bullet-active {
        width: 30px;
        height: 6px;
        border-radius: 5px;
        transition: all .3s;
    }
    </style>

<div id="section1" class="mobileHide">
