
<style>
    .eggs {
        max-width: 450px;
        margin: 10px 0 20px;
    }
    
    .eggs .background {
        height: 49px;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
		border-radius: 10px 10px 0 0;
		position: relative;
        color: #fff;
        padding: 0 4%;
        background-image: linear-gradient(90deg, #EE6426, #F4492A);
        background-size: 100% 100%;
    }

    .eggs .background img {
        position: absolute;
        top: 0;
        right: 0;
        width: 142px;
    }
    
    .eggs .components {
        background-color: #fff;
        padding: 14px;
        border-radius: 0 0 10px 10px;
        display: flex;
        flex: 1;
        box-shadow: 0px 3px 20px #00000015;
    }
    
    .eggs .components .item {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #000;
        text-align: center;
        flex: 1;
    }
    
    .eggs .components .item img {
        max-width: 72px;
    }
    
    .eggs .components .item span {
        font-size: 14px;
        line-height: 18px;
        font-weight: 500;
        display: flex;
        height: 100%;
        align-items: center;
    }
    
    .eggs .components .item .price {
        text-decoration: line-through;
        align-items: flex-start;
     }
    
    .eggs .components .item>div {
        background-image: linear-gradient(to bottom, #2E26EE, #2A60F4);
        border-radius: 20px;
        color: #fff;
        padding: 8px 20px;
        margin-bottom: 12px;
        line-height: 22px;
    }
    
    
    .eggs .components .item .yellow {
        line-height: 11px;
        padding: 14px 0;
        background-image: linear-gradient(180deg, #EE6426, #F4492A);
        color: #fff;
        border-radius: 20px;
        font-size: 16px;
        font-weight: 500;
        width: 100%;
        margin-bottom: 16px;
    }
    
      @media (max-width: 767px) {
       .eggs .background {
            font-size: 14px;
        }
      
        .eggs .components {
            padding: 6px;
        }
    
        .eggs .components .item img {
            max-width: 45px;
        }
    
        .eggs .components .item span {
            font-size: 11px;
            line-height: 13px;
        }
    
        .eggs .components .item > div {
            padding: 4px 14px;
            font-size: 12px;
        }
    
        .eggs .components .item .yellow {
            line-height: 8px;
        } 
    }
    </style>

    {% assign send_accessories_list = "kickstand,customized-mudguards,esim-card" | split: ',' %}

    <div class="eggs">
        <div class="background">
            <div class="u17DemiBold_v2" style="font-size: 14px;">3 Free Accessories with your bike</div>
			<div class="u11Light_v2">(Apply in your cart automatically)</div>
        </div>
        <div class="components">
                {% for item in send_accessories_list %}
                    <div class="item" price="{{ all_products[item].selected_or_first_available_variant.price | divided_by: 100 }}">
                        {{ all_products[item].featured_image | image_url: width: 200 | image_tag }}
                        <span>{{ all_products[item].title }}</span>
                    </div>
                {% endfor %}
                <div class="item" style="max-width: 87px;">
                    <div class="yellow">FREE</div>
                    <span style="align-items: flex-start;font-size: 16px;text-decoration: line-through;">â‚¬169</span>
                </div>
        </div>
    </div>

