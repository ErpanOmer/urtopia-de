<script setup>
    let use_swiper = true

    {% if hide_mobile %}
          if (global_config.is_mobile) {
              use_swiper = false
          }
    {% endif %}

    use_swiper && new Swiper ('#bike', {
        // direction: 'vertical',  
        slidesPerView: global_config.is_mobile ? 1 : 3,
        spaceBetween: global_config.is_mobile ? 0 : 20,
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
      },
      // 如果需要滚动条
        scrollbar: {
            el: '.swiper-scrollbar',
        },
  })

  function changeBike (gotoUrl, imgUrl, target) {
    const parent = target.parentNode

    const active = parent.querySelector('.active')

    active.className = ''
    target.className = 'active'

    const img = parent.parentNode.parentNode.parentNode.querySelector('img')
    img.src = imgUrl

    // 新增的代码
    const a = parent.parentNode.parentNode.parentNode.querySelector('a')
    a.href = gotoUrl
  }


  $('#bike .swiper-slide > img').on('click', e => {
    e.target.parentNode.querySelector('a').click()
  })

</script>