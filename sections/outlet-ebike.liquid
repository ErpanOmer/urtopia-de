{% assign carbon1_Sirius = "https://cdn.shopify.com/s/files/1/0633/2068/6808/files/20230630-181731.png?v=1688120408" %}
{% assign carbon1_Paris = "https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Mask_Group_18150_2x_63ea456b-69c1-4d96-988f-efa931148bc1.png?v=1677640442" %}
{% assign carbon1_Lyra = "https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Mask_Group_18139_2x_ee2cf1ae-8693-42a3-ab99-d53ea78e2802.png?v=1677640511" %}
{% assign carbon1_Vanilla = "https://cdn.shopify.com/s/files/1/0633/2068/6808/files/20230420-182731.jpg?v=1681986478" %}



{{ 'outlet.scss.css' | asset_url | stylesheet_tag: preload: true }}
{% assign product = collection.products.first %}

<div class="gray-background-color top-area">
    <div class="centeral-content">
        <div class="u72DemiBold_v2">OUTLET</div>
        <div class="u24Medium_v2">The Urtopia Outlet includes demo e-bikes with the same quality and performance as new ones. The e-bikes are tested by our engineers for our customers. Also, meticulous quality control measures are implemented prior to offering them for sale.</div>
        <div class="product">
            <div>
                <div class="u36DemiBold_v2">{{ product.title }}</div>
                <div class="u20Light_v2">Fit for 165cm - 195cm</div>
                <div class="u30DemiBold_v2 emphasize" data-price={{ product.compare_at_price | money_without_trailing_zeros }}>{{ product.price | money_without_trailing_zeros }}</div>
                <div class="dots">
                    <div data-variant="43935607259352" orange class="active"></div>
                    <div data-variant="43935607324888" yellow></div>
                    <div data-variant="43935607292120" gray></div>
                    <div data-variant="43935607357656" peach></div>
                </div>
                <a href="/products/outlet-carbon-1-1s?variant=43935607259352" class="my-button my-button-origin">Order now</a>
            </div>
            <div style="flex: 1.5;">
                <img src="{{carbon1_Sirius}}" alt="">
                <div class="u48DemiBold_v2 off">{{ product.compare_at_price | minus: product.price | money_without_trailing_zeros }} OFF</div>
            </div>
        </div>
    </div>
</div>
<div class="centeral-content need">
    <div class="u48DemiBold_v2">Need a different <br class="pcHide">size or style?</div>
    <div class="u30DemiBold_v2">Check out the new e-bikes <span class="emphasize">in stock</span></div>
</div>
{% render 'home-page-bikes', hide_mobile: true %}

<script>
    $('.top-area .dots > div').on('click', e => {
        $('.top-area .dots > div').removeClass('active')

        $(e.target).addClass('active')

        const href = $('.top-area .product a').attr('href').split('?').shift()
        $('.top-area .product a').attr('href', `${href}?variant=${$(e.target).attr('data-variant')}`)

        if ($(e.target).attr('orange') === '') {
            $('.top-area .product > div:last-child img').attr('src', '{{carbon1_Sirius}}')
        }

        if ($(e.target).attr('yellow') === '') {
            $('.top-area .product > div:last-child img').attr('src', '{{carbon1_Paris}}')
        }

        if ($(e.target).attr('gray') === '') {
            $('.top-area .product > div:last-child img').attr('src', '{{carbon1_Lyra}}')
        }

        if ($(e.target).attr('peach') === '') {
            $('.top-area .product > div:last-child img').attr('src', '{{carbon1_Vanilla}}')
        }
    })
</script>